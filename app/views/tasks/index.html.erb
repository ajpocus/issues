<form method="link" action="<%= new_task_path %>">
  <input type="submit" value="+ New Task" id="new-task" class="round" />
</form>

<% if @tasks.any? %>
  <div class="task-list">
    <%= render @tasks %>
  </div>
<% end %>

<% if @goals.any? %>
  <div class="goal-list">
    <% @goals.each do |goal| %>
      <div class="goal">
	<%= link_to goal.name, tasks_by_goal_path(goal) %>
      </div>
    <% end %>
  </div>
<% end %>

