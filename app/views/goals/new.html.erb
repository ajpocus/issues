<%= form_for(@goal) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <br />

  <div class="field">
    <%= f.label :description %> (Optional)
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit "Create Goal" %>
  </div>
<% end %>

