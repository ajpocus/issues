<%= form_for(@task) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <br />

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :goals %>
    <%= select_tag :goal_id, options_from_collection_for_select(Goal.all,
      "id", "name") %>
  </div>

  <div class="actions">
    <%= f.submit "Create Task" %>
  </div>
<% end %>  
